# Kestra Configuration

# Versions
KESTRA_VERSION=latest-full
POSTGRES_VERSION=16-alpine

# Port Configuration
KESTRA_PORT_OVERRIDE=8080
KESTRA_MANAGEMENT_PORT=8081

# PostgreSQL Configuration
POSTGRES_DB=kestra
POSTGRES_USER=kestra
